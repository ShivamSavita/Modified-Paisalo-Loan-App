<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_monthly_income" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalIncomeMonthly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_caste" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalCaste"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_religion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalReligion"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_marital_status" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalMarritalStatus"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_present_residence_owner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentResidenceOwner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_house_rent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentHouseRent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_residence_duration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalPresentResidenceDuration"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant_family_members" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinLoanAppPersonalFamilyMembers"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" /></LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>