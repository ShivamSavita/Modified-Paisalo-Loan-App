<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digital.paisalo.jlgsourcing.fragments.FragmentFamilyExpense">

    <ScrollView
        android:id="@+id/scrlvl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNav"
        app:layout_constraintVertical_weight=".95"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesRent"
                    android:hint="Expenses in Rent"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesFood"
                    android:hint="Expenses for Food"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesEducation"
                    android:hint="Expenses for Education"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesHealth"
                    android:hint="Expenses for Health"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesTravelling"
                    android:hint="Expenses for Travelling"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesEntertainment"
                    android:hint="Expenses for Entertainment"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietFamilyExpensesOthers"
                    android:hint="Any Other Expenses"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Detail"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                tools:background="@color/zxing_viewfinder_laser" />

            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                  <TextView
                android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lender TYpe"
                    style="@style/InputLabel" />

                <LinearLayout
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/acspHomeType"
                    android:layout_marginStart="@dimen/input_label_horizontal_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                  <TextView
                android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lender TYpe"
                    style="@style/InputLabel" />
                <LinearLayout
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/acspHomeRoofType"
                    android:layout_marginStart="@dimen/input_label_horizontal_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                  <TextView
                android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lender TYpe"
                    style="@style/InputLabel" />
                <LinearLayout
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/acspToiletType"
                    android:layout_marginStart="@dimen/input_label_horizontal_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:orientation="vertical">

                  <TextView
                android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Living with spouse"
                    style="@style/InputLabel" />
                <LinearLayout
                    android:background="@drawable/spinner_bggrey1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/acspLivigWithSpouse"
                    android:layout_marginStart="@dimen/input_label_horizontal_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/btnNav"
        layout="@layout/layout_nav_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrlvl"
        app:layout_constraintVertical_weight=".05"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
